<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    tools:context="com.xsyj.irrigation.fragment.Page3Fragment"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <RelativeLayout
            android:id="@+id/view_turnset_area"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_turnset_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/font_black"
                android:maxEms="6"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="所属区域"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sx_tag1"
                android:layout_toRightOf="@id/tv_turnset_area"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/view_turnset_sysb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_turnset_sysb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:maxEms="6"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/font_black"
                android:text="水源首部"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sx_tag1"
                android:layout_toRightOf="@id/tv_turnset_sysb"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/view_turnset_syjj"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_turnset_syjj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:maxEms="6"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/font_black"
                android:text="水源机井"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sx_tag1"
                android:layout_toRightOf="@id/tv_turnset_syjj"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout style="@style/common_horizontal_division_line_style" />
    <LinearLayout
        android:id="@+id/ll_page3_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sx_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_cur_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周期一"
                android:textSize="@dimen/sp_16"
                android:maxEms="6"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/font_lightgreen"
                android:paddingLeft="@dimen/dp_10"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:id="@+id/btn_page3_sx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="筛选"
                    android:textSize="@dimen/sp_18" />

                <ImageView
                    android:id="@+id/iv_page3_sx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/sx_tag1"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/lgz_set_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"/>
        <ImageButton
            android:id="@+id/ib_lgz_page3_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:src="@drawable/lgz_add"/>
    </FrameLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_5"
    android:id="@+id/irr_itemview">
    <TextView
        android:id="@+id/tv_pumpwell_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="1号机井"
        android:textColor="@color/title_bg"
        android:textSize="@dimen/sp_16"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态:"
                android:textColor="@color/font_gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_pumpwell_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开"
                android:textColor="@color/font_lightpurple"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_8">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="压力:"
                android:textColor="@color/font_gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_pumpwell_stress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EST-1"
                android:textColor="@color/font_lightpurple"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="3dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计水量:"
                    android:textColor="@color/font_gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_pumpwell_wateryield"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EST-1"
                    android:textColor="@color/font_lightpurple"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="瞬时流量:"
                    android:textColor="@color/font_gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_pumpwell_flow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FI-SW-01"
                    android:textColor="@color/font_lightpurple"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/btn_pumpwell_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btn_yellow_bg"
        android:text="1号机井开"
        android:textColor="@color/font_white"
        android:textSize="13sp"
        android:paddingLeft="20dp"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"/>
    <TextView
        android:id="@+id/btn_pumpwell_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/tv_red_bg"
        android:text="1号机井关"
        android:textColor="@color/font_white"
        android:textSize="13sp"
        android:paddingLeft="20dp"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        style="@style/common_horizontal_division_line_style"
        />


</LinearLayout>

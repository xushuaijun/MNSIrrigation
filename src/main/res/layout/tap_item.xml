<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:gravity="center_vertical">
    <com.xsyj.irrigation.customview.DragView
        android:id="@+id/tap_drag"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--下层布局-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_tap_editer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/font_gray"
                android:text="编辑"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_20"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_tap_del"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_light"
                android:text="删除"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_20" />
        </LinearLayout>

        <!--上层布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_white"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <!--第一行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="阀门编号:"
                            android:textColor="@color/font_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_tap_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="160640062"
                            android:textColor="@color/font_lightgreen"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="阀门名称:"
                            android:textColor="@color/font_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_tap_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2号阀"
                            android:textColor="@color/font_lightgreen"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--第二行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="出地桩ID:"
                            android:textColor="@color/font_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_tap_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6-1-2"
                            android:textColor="@color/font_lightgreen"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="首部ID:"
                            android:textColor="@color/font_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_tap_sbid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/font_lightgreen"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- 第三行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="灌溉面积:"
                            android:textColor="@color/font_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_tap_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textColor="@color/font_lightgreen"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="供电电压:"
                            android:textColor="@color/font_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_tap_gddy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.4"
                            android:textColor="@color/font_lightgreen"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--第四行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="电池电压:"
                            android:textColor="@color/font_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_tap_dcdy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.4"
                            android:textColor="@color/font_lightgreen"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="管道压力:"
                            android:textColor="@color/font_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_tap_gdyl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.5"
                            android:textColor="@color/font_lightgreen"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--第五行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="阀门用户ID:"
                            android:textColor="@color/font_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_tap_userid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="admin"
                            android:textColor="@color/font_lightgreen"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="规格型号:"
                            android:textColor="@color/font_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_tap_ggxh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/font_lightgreen"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--第六行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="生产批次:"
                            android:textColor="@color/font_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_tap_scpc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/font_lightgreen"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="网关编号:"
                            android:textColor="@color/font_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_tap_wgbh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000000015"
                            android:textColor="@color/font_lightgreen"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--第七行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="网关名称:"
                            android:textColor="@color/font_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_tap_wgname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/font_lightgreen"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--第八行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/iv_wg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image_selector"
                            android:gravity="center"
                            android:padding="@dimen/dp_10"/>
                        <TextView
                            android:id="@+id/tv_bd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_10"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </com.xsyj.irrigation.customview.DragView>
</LinearLayout>
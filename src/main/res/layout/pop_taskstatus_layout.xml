<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阀门编号"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/et_search_tapnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="200dp"
                    android:background="@drawable/bg_edit_selector"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:padding="5dp"
                    android:hint="阀门编号"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网关编号"
                    android:textSize="16sp"
                    />
                <EditText
                    android:id="@+id/et_search_netgate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_selector"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:minWidth="200dp"
                    android:padding="5dp"
                    android:hint="网关编号"
                    android:textSize="15sp"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务类型"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    />
                <RelativeLayout
                    android:id="@+id/view_task_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/bg_edit_selector"
                    >
                    <TextView
                        android:id="@+id/tv_task_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/font_black"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:minWidth="50dp"
                        android:text="请选择"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sx_tag1"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:layout_marginRight="20dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="执行状态"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    />
                <RelativeLayout
                    android:id="@+id/view_task_operastatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bg_edit_selector"
                    >
                    <TextView
                        android:id="@+id/tv_task_operastatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/font_black"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:minWidth="50dp"
                        android:text="请选择"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/sx_tag1"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下发时间"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/view_task_stime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/bg_edit_selector"
                        >
                        <TextView
                            android:id="@+id/tv_task_stime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/font_black"
                            android:text="点击选择时间"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sx_tag1"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="||"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"
                        />
                    <RelativeLayout
                        android:id="@+id/view_task_etime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/bg_edit_selector"
                        >
                        <TextView
                            android:id="@+id/tv_task_etime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/font_black"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="点击选择时间"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sx_tag1"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>
                </LinearLayout>



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10">

                <Button
                    android:id="@+id/btn_task_reset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_weight="1"
                    android:textColor="@color/btn_lightgreen"
                    android:background="@drawable/btn_register_selector"
                    android:text="重置" />

                <Button
                    android:id="@+id/btn_task_sure"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dp_5"
                    android:layout_weight="1"
                    android:textColor="@color/bg_white"
                    android:background="@drawable/btn_login_selector"
                    android:text="确认" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
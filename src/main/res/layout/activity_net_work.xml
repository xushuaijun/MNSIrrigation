<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xsyj.irrigation.NetWorkActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/title_bg"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="8dp">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:onClick="back"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp"
                android:layout_weight="2"
                android:text="多网抄表"
                android:textColor="@color/font_white"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_tj"
                android:padding="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/font_white"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_gdyl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tag="1"
                android:checked="true"
                android:layout_weight="1"
                android:text="管道压力(MPa)"
                android:button="@drawable/check_selector"
                android:textColor="@color/main_botton_text_color"/>
            <CheckBox
                android:id="@+id/cb_dcdy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tag="2"
                android:layout_weight="1"
                android:text="电池电压(V)"
                android:button="@drawable/check_selector"
                android:textColor="@color/main_botton_text_color"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_ssll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tag="3"
                android:layout_weight="1"
                android:button="@drawable/check_selector"
                android:textColor="@color/main_botton_text_color"
                android:text="瞬时流量(m³/时)"/>
            <CheckBox
                android:id="@+id/cb_ljll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tag="4"
                android:layout_weight="1"
                android:text="累计流量(m³)"
                android:button="@drawable/check_selector"
                android:textColor="@color/main_botton_text_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_kglzt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tag="5"
                android:layout_weight="1"
                android:text="开关量状态"
                android:button="@drawable/check_selector"
                android:textColor="@color/main_botton_text_color"/>
            <CheckBox
                android:id="@+id/cb_cjsj"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tag="6"
                android:layout_weight="1"
                android:text="采集时间"
                android:button="@drawable/check_selector"
                android:textColor="@color/main_botton_text_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_cddy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tag="7"
                android:layout_weight="1"
                android:text="充电电压(V)"
                android:button="@drawable/check_selector"
                android:textColor="@color/main_botton_text_color"/>
            <CheckBox
                android:id="@+id/cb_lydz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tag="8"
                android:layout_weight="1"
                android:text="路由地址"
                android:button="@drawable/check_selector"
                android:textColor="@color/main_botton_text_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_xhqd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tag="9"
                android:layout_weight="1"
                android:text="信号强度"
                android:button="@drawable/check_selector"
                android:textColor="@color/main_botton_text_color"/>
            <CheckBox
                android:id="@+id/cb_bbh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tag="10"
                android:layout_weight="1"
                android:text="版本号"
                android:button="@drawable/check_selector"
                android:textColor="@color/main_botton_text_color"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ExpandableListView
            android:id="@+id/elv_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:groupIndicator="@null" />
    </FrameLayout>
</LinearLayout>
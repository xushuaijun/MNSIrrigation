<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xsyj.irrigation.GuideActivity"
    android:weightSum="1">

    <com.xsyj.irrigation.customview.SlideShowView
        android:id="@+id/login_slideshowView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.8" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_weight="0.2">
        <Button
            android:background="@drawable/btn_register_selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="注册"
            android:textSize="20sp"
            android:textColor="@color/font_lightgreen"
            android:id="@+id/btn_register" />
        <Button
            android:background="@drawable/btn_login_selector"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="登录"
            android:textColor="@color/font_white"
            android:textSize="20sp"
            android:id="@+id/btn_login" />
    </LinearLayout>
</LinearLayout>
